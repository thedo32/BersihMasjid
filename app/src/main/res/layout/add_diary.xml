<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_text_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="15dp"
        android:text="@string/add_diary"
        android:textSize="25sp"
        android:textColor="@color/black"
        tools:ignore="VisualLintOverlap" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/title"
            android:hint="Judul Konten"
            android:cursorVisible="true"
            android:textCursorDrawable="@color/black"
            android:drawablePadding="10dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColorHint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_text"
            android:autofillHints="Title"
            android:inputType="textCapWords"
            tools:ignore="VisualLintTextFieldSize" />
        <!--android:drawableLeft="@drawable/email"-->

        <EditText
            android:id="@+id/description"
            android:cursorVisible="true"
            android:textCursorDrawable="@color/black"
            android:hint="@string/description_hint"
            android:drawablePadding="10dp"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:inputType="textEmailAddress|textMultiLine"
            android:maxLines="10"
            android:minLines="10"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_text"
            android:autofillHints="Description Multiline"
            tools:ignore="VisualLintTextFieldSize" />
        <!--android:drawableLeft="@drawable/password" > -->

        <EditText
            android:id="@+id/lat"
            android:hint="@string/titik_lokasi"
            android:cursorVisible="true"
            android:textCursorDrawable="@color/black"
            android:drawablePadding="10dp"
            android:layout_marginTop="500dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColorHint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_text"
            android:autofillHints="0.000"
            android:inputType="numberDecimal"
            tools:ignore="VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/lon"
            android:hint="@string/titik_lokasi"
            android:cursorVisible="true"
            android:textCursorDrawable="@color/black"
            android:drawablePadding="10dp"
            android:layout_marginTop="570dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColorHint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_text"
            android:autofillHints="0.000"
            android:inputType="numberDecimal"
            tools:ignore="VisualLintTextFieldSize" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/todo_add"
            android:src="@drawable/add_floating24"
            app:rippleColor="@color/teal_200"
            tools:ignore="ImageContrastCheck" />

    </RelativeLayout>
</RelativeLayout>