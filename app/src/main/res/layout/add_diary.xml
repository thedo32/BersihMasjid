<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_bgone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="15dp"
        android:text="@string/tambah_konten_admin"
        android:textSize="18sp"
        android:textColor="@color/black"
        tools:ignore="VisualLintOverlap" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/tmstart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="345dp"
            android:layout_marginRight="5dp"
            android:autofillHints="0.000"
            android:background="@drawable/custom_text_white"
            android:cursorVisible="true"
            android:drawablePadding="10dp"
            android:hint="Waktu Mulai"
            android:inputType="datetime"
            android:minHeight="48dp"
            android:textColorHint="@color/black"
            android:textCursorDrawable="@color/black"
            tools:ignore="VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/tmend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="410dp"
            android:layout_marginRight="5dp"
            android:autofillHints="0.000"
            android:background="@drawable/custom_text_white"
            android:cursorVisible="true"
            android:drawablePadding="10dp"
            android:hint="Waktu Selesai"
            android:inputType="datetime"
            android:minHeight="48dp"
            android:textColorHint="@color/black"
            android:textCursorDrawable="@color/black"
            tools:ignore="VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/title"
            android:hint="Judul Konten"
            android:cursorVisible="true"
            android:textCursorDrawable="@color/black"
            android:drawablePadding="10dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColorHint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_text_white"
            android:autofillHints="Title"
            android:inputType="textCapWords"
            tools:ignore="VisualLintTextFieldSize" />
        <!--android:drawableLeft="@drawable/email"-->

        <EditText
            android:id="@+id/alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="120dp"
            android:layout_marginRight="5dp"
            android:autofillHints="Description Multiline"
            android:background="@drawable/custom_text_white"
            android:cursorVisible="true"
            android:drawablePadding="10dp"
            android:hint="@string/description_hint"
            android:inputType="textEmailAddress|textMultiLine"
            android:maxLines="6"
            android:minLines="6"
            android:textCursorDrawable="@color/black"
            tools:ignore="VisualLintTextFieldSize" />
        <!--android:drawableLeft="@drawable/password" > -->

        <EditText
            android:id="@+id/lat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="500dp"
            android:layout_marginRight="5dp"
            android:autofillHints="0.000"
            android:background="@drawable/custom_text_white"
            android:cursorVisible="true"
            android:drawablePadding="10dp"
            android:hint="@string/titik_lokasi"
            android:minHeight="48dp"
            android:textColorHint="@color/black"
            android:textCursorDrawable="@color/black"
            tools:ignore="VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/lon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="570dp"
            android:layout_marginRight="5dp"
            android:autofillHints="0.000"
            android:background="@drawable/custom_text_white"
            android:cursorVisible="true"
            android:drawablePadding="10dp"
            android:hint="@string/titik_lokasi"
            android:minHeight="48dp"
            android:textColorHint="@color/black"
            android:textCursorDrawable="@color/black"
            tools:ignore="VisualLintTextFieldSize,TouchTargetSizeCheck" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="36dp"
            android:contentDescription="@string/todo_add"
            android:src="@drawable/add_floating24"
            app:rippleColor="@color/teal_200"
            tools:ignore="ImageContrastCheck" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="286dp"
            android:layout_marginBottom="1dp"
            android:contentDescription="@string/todo_add"
            android:enabled="false"
            android:src="@drawable/photo"
            app:rippleColor="@color/teal_200"
            tools:ignore="ImageContrastCheck" />

    </RelativeLayout>
</RelativeLayout>